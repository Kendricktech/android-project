{
  "name": "Android Development",
  "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu",
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "vscjava.vscode-java-pack",
    "ms-azuretools.vscode-docker"
  ],
  "postCreateCommand": "./setup.sh",
  "remoteUser": "vscode"
}
